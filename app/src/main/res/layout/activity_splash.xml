<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppCusTheme"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySplash"
    tools:context="com.example.test.testproj.SplashScreen">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iSplashView"
            android:src="@drawable/applogo"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/tSplashView"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestApp for Micro-B"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        
    </LinearLayout>

</RelativeLayout>