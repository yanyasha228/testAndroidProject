<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showItemLayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showImage"
            android:layout_width="85dp"
            android:layout_height="108dp"
            android:scaleType="matrix"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/showName"
            android:layout_width="87dp"
            android:layout_height="37dp"
            android:text="showName"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="120"
            android:scrollHorizontally="false"
            android:text="showDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/showFavorite"
            android:layout_width="50dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/heart_like" />

        <TextView
            android:id="@+id/showRateStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate:"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/showRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showRate"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>


